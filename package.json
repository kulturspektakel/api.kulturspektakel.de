{
  "name": "api.kulturspektakel.de",
  "version": "1.0.0",
  "main": "src/index.ts",
  "license": "MIT",
  "scripts": {
    "start": "node -r dotenv/config dist/index.js",
    "build": "tsc",
    "dev": "ts-node-dev --transpile-only --no-notify -r dotenv/config src/index.ts",
    "generate": "yarn generate:env && yarn generate:prisma && yarn generate:graphql && yarn generate:mail",
    "generate:graphql": "graphql-codegen -r dotenv/config",
    "generate:prisma": "prisma generate",
    "generate:mail": "maizzle build production",
    "generate:proto": "cd src/proto && protoc --experimental_allow_proto3_optional --plugin=../../node_modules/.bin/protoc-gen-ts_proto --ts_proto_out=. ./*.proto --ts_proto_opt=esModuleInterop=true",
    "generate:env": "yarn dotenv-vault pull",
    "update:db": "export $(cat .env | xargs) && prisma db push",
    "mail": "maizzle serve"
  },
  "devDependencies": {
    "@graphql-codegen/add": "^3.1.1",
    "@graphql-codegen/cli": "^2.6.2",
    "@graphql-codegen/introspection": "^2.1.1",
    "@graphql-codegen/typescript": "^2.5.0",
    "@graphql-codegen/typescript-graphql-request": "^4.4.9",
    "@graphql-codegen/typescript-operations": "^2.4.1",
    "@maizzle/cli": "1.4.0",
    "@maizzle/framework": "^3.7.3",
    "@sentry/cli": "^2.1.0",
    "@types/cookie-parser": "^1.4.3",
    "@types/date-fns": "^2.6.0",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/lodash.merge": "^4.6.7",
    "@types/node-emoji": "^1.8.1",
    "@types/node-fetch": "2.6.2",
    "@types/nodemailer": "^6.4.1",
    "prettier": "^2.6.2",
    "prisma": "^4.3.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "@awaitjs/express": "^0.9.0",
    "@aws-sdk/client-ses": "^3.107.0",
    "@pothos/core": "^3.20.0",
    "@pothos/plugin-prisma": "^3.32.0",
    "@pothos/plugin-relay": "^3.25.0",
    "@pothos/plugin-scope-auth": "^3.13.0",
    "@prisma/client": "^4.3.1",
    "@sentry/integrations": "^7.1.1",
    "@sentry/node": "^7.1.1",
    "apollo-server-express": "^3.10.2",
    "cookie-parser": "^1.4.6",
    "crc-32": "^1.2.2",
    "date-fns": "^2.28.0",
    "date-fns-tz": "^1.3.4",
    "dotenv": "^16.0.1",
    "dotenv-vault": "^1.6.0",
    "email-validator": "^2.0.4",
    "env-var": "^7.1.1",
    "express": "^4.18.1",
    "form-data": "^4.0.0",
    "graphile-worker": "^0.13.0",
    "graphql": "^16.5.0",
    "graphql-scalars": "^1.18.0",
    "jsonwebtoken": "^8.5.1",
    "lodash.merge": "^4.6.2",
    "node-emoji": "^1.11.0",
    "node-fetch": "2",
    "nodemailer": "^6.7.5",
    "normalize-url": "6",
    "samlify": "^2.8.5",
    "ts-node": "^10.8.1",
    "ts-proto": "^1.125.0",
    "yarn": "^1.22.19"
  }
}
