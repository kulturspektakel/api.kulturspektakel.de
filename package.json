{
  "name": "api.kulturspektakel.de",
  "version": "1.0.0",
  "main": "src/index.ts",
  "license": "MIT",
  "scripts": {
    "start": "node -r dotenv/config dist/index.js",
    "dev": "ts-node-dev --transpile-only --no-notify -r dotenv/config src/index.ts",
    "build": "yarn generate && tsc",
    "generate": "yarn generate:prisma && yarn generate:graphql && yarn generate:mail && yarn generate:proto",
    "generate:graphql": "graphql-codegen -r dotenv/config",
    "generate:prisma": "prisma generate",
    "generate:mail": "maizzle build production",
    "generate:proto": "rm -f src/proto/index.js types/proto.d.ts && yarn pbjs -t static-module -w commonjs -o src/proto/index.js src/proto/* --es6 && yarn pbts -o types/proto.d.ts src/proto/index.js",
    "update:db": "export $(cat .env | xargs) && prisma db push --accept-data-loss",
    "mail": "maizzle serve"
  },
  "devDependencies": {
    "@graphql-codegen/add": "^2.0.2",
    "@graphql-codegen/cli": "^1.21.4",
    "@graphql-codegen/introspection": "^1.18.2",
    "@graphql-codegen/typescript": "^1.22.0",
    "@graphql-codegen/typescript-graphql-request": "^3.1.1",
    "@graphql-codegen/typescript-operations": "^1.17.16",
    "@maizzle/cli": "^1.4.0",
    "@maizzle/framework": "^3.5.1",
    "@types/cookie-parser": "^1.4.2",
    "@types/crc": "^3.4.0",
    "@types/date-fns": "^2.6.0",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/node-fetch": "^2.5.10",
    "@types/nodemailer": "^6.4.1",
    "prettier": "^2.0.5",
    "prisma": "^2.24.1",
    "ts-node-dev": "^1.0.0",
    "typescript": "^4.2.4"
  },
  "dependencies": {
    "@aws-sdk/client-ses": "^3.14.0",
    "@prisma/client": "^2.24.1",
    "apollo-server-express": "^2.24.0",
    "cookie-parser": "^1.4.5",
    "crc": "^3.8.0",
    "date-fns": "^2.21.3",
    "date-fns-tz": "^1.1.4",
    "dotenv": "^9.0.0",
    "email-validator": "^2.0.4",
    "env-var": "^7.0.0",
    "form-data": "^4.0.0",
    "graphile-worker": "^0.11.1",
    "graphql": "^15.4.0",
    "graphql-request": "^3.4.0",
    "graphql-scalars": "^1.9.3",
    "ics": "^2.27.0",
    "jsonwebtoken": "^8.5.1",
    "nexus": "^1.0.0",
    "nexus-plugin-prisma": "^0.35.0",
    "node-fetch": "^2.6.1",
    "nodemailer": "^6.6.0",
    "passkit-generator": "^2.0.6"
  }
}
