{
  "compilerOptions": {
    "skipLibCheck": true,
    "strict": true,
    "rootDir": "src",
    "outDir": "dist",
    "typeRoots": ["node_modules/@types", "../types"],
    "strictNullChecks": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es2019"]
  },
  "ts-node": {
    "files": true
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "./jest.config.ts", "scripts"]
}
